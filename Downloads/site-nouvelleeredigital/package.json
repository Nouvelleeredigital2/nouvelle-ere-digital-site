{
  "name": "vitrine-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/web",
    "build": "npm run build -w apps/web",
    "start": "npm run start -w apps/web",
    "lint": "npm run lint -w apps/web",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck -w apps/web",
    "clear-personas": "node clear-personas.js",
    "db:generate": "npm run db:generate -w apps/web",
    "db:migrate": "npm run db:migrate -w apps/web",
    "db:push": "npm run db:push -w apps/web",
    "db:seed": "npm run db:seed -w apps/web",
    "db:studio": "npm run db:studio -w apps/web",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": [
      "prettier --write",
      "npm run lint -w apps/web"
    ],
    "**/*.{ts,tsx}": [
      "npm run typecheck -w apps/web"
    ]
  },
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/js-cookie": "^3.0.6",
    "i18next": "^25.6.0",
    "js-cookie": "^3.0.5",
    "react-i18next": "^16.0.0",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.180.0"
  }
}
